<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".StartPage">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView2"
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Choose service:" />


    <Button
        android:id="@+id/donorBTN"
        android:onClick="isDonor"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_donor_button"
        android:textAllCaps="false"
        android:textColor="#961414"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Donor" />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider2"
            android:layout_width="95dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="  OR  " />

        <View
            android:id="@+id/divider3"
            android:layout_width="95dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/doneeBTN"
        android:onClick="isDonee"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_donee_button"
        android:textAllCaps="false"
        android:textColor="#F2F2F2"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Receiver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:text="Any Question About Blood Donation?"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:onClick="additionalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:text="Click Here" />
    </LinearLayout>

</LinearLayout>